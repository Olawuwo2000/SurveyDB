<%- include('partials/header') %>


  <div class="container">
    <header class="header">
      <h1 id="title" class="text-center">Ola Resturant Survey Form</h1>
      <p id="description" class="description text-center">
        Thank you for taking the time to help us improve Our Service
      </p>
    </header>
    <form action="/home" class="survey" method="POST">
    <form id="survey-form">
      <div class="form-group">
        <label id="name-label" for="name">Name</label>
        <input
          type="text"
          name="name"
          id="name"
          class="form-control"
          placeholder="Enter your name"
          required
        />
        <form id="survey-form">
            <div class="form-group">
              <label id="name-label" for="name">Address</label>
              <input
                type="text"
                name="address"
                id="name"
                class="form-control"
                placeholder="Enter your Address"
                required
              />
      </div>
      <div class="form-group">
        <label id="email-label" for="email">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          placeholder="Enter your Email"
          required
        />
      </div>
      <div class="form-group">
        <label id="number-label" for="number"
          >Age<span class="clue"></span></label
        >
        <input
          type="number"
          name="age"
          id="number"
          min="10"
          max="99"
          class="form-control"
          placeholder="Age"
        />
      </div>
      <div class="form-group">
        <p>How would you like to Rate Our Resturant?</p>
        <select id="dropdown" name="rating" class="form-control" required>
          <option disabled selected value>Select the Rating </option>
          <option value="1 star">1 Star</option>
          <option value="2 star">2 Star</option>
          <option value="3 star">3 Star</option>
          <option value="4 star">4 Star</option>
          <option value="5 star">5 Star</option>
        </select>
      </div>
  
      <div class="form-group">
        <p>Would you recommend Ola Resturant to a friend?</p>
        <label>
          <input
            name="recommend"
            value="definitely"
            type="radio"
            class="input-radio"
            checked
          />Definitely</label
        >
        <label>
          <input
            name="recommend"
            value="maybe"
            type="radio"
            class="input-radio"
          />Maybe</label
        >
  
        <label>
          
          <input
            name="recommend"
            value="not-sure"
            type="radio"
            class="input-radio"
          />Not sure</label
        >
      </div>
  
      <div class="form-group">
        <p>
          What is your favorite Dish in Our Resturant?
        </p>
        <select id="most-like" name="mostlike" class="form-control" required>
          <option disabled selected value>Select a Dish</option>
          <option value="Rice and Beans">Rice and Beans</option>
          <option value="Yam and Egg">Yam and Egg</option>
          <option value="Pizza"> Pizza </option>
          <option value="Cuban Sandwich">Cuban Sandwich</option>
          <option value="Chinese Chicken Salad">Chinese Chicken Salad</option>
          <option value="Chop Suey">Chop Suey</option>
          <option value="Bread">Bread</option>
        </select>
      </div>
  
      <div class="form-group">
        <p>
          What would you like to see improved?
          <span class="clue"></span>
        </p>
  
        <label
          ><input
            name="prefer"
            value="Food Packaging"
            type="checkbox"
            class="input-checkbox"
          />Food Packaging</label
        >
        <label>
          <input
            name="prefer"
            value="Menu List"
            type="checkbox"
            class="input-checkbox"
          />Menu List</label
        >
        <label
          ><input
            name="prefer"
            value="Home Service"
            type="checkbox"
            class="input-checkbox"
          />Home Service</label
        >
        <label
          ><input
            name="prefer"
            value="Sitting Arrangement"
            type="checkbox"
            class="input-checkbox"
          />Sitting Arrangement</label
        >
        <label
          ><input
            name="prefer"
            value="Parking Space"
            type="checkbox"
            class="input-checkbox"
          />Parking Space</label
        >
        <label
          ><input
            name="prefer"
            value="Security"
            type="checkbox"
            class="input-checkbox"
          />Security</label
        >
        <label
          ><input
            name="prefer"
            value="Ventilation"
            type="checkbox"
            class="input-checkbox"
          />Ventilation</label
        >
      </div>
  
      <div class="form-group">
        <p>Any comments or suggestions?</p>
        <textarea
          id="comments"
          class="input-textarea"
          name="comment"
          placeholder="Enter your comment here..."
        ></textarea>
      </div>
  
      <div class="form-group">
        <button type="submit" id="submit" class="submit-button">
          Submit
        </button>
      </div>
    </form>
  </form>
  </div>










<%- include('partials/footer') %>
